{
  "name": "chat-app-electron",
  "version": "1.0.0",
  "description": "ロリスとのおしゃべりタイム - デスクトップチャットアプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "web": "node web-server.js",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "install-deps": "npm install"
  },
  "keywords": [
    "chat",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.0"
  },
  "build": {
    "appId": "com.example.chat-app",
    "productName": "ロリスとのおしゃべりタイム",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0"
  }
}
