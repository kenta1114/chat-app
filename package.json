{
  "name": "chat-app-electron",
  "version": "1.0.0",
  "description": "ロリスとのおしゃべりタイム - デスクトップチャットアプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "web": "node web-server.js",
    "dev": "electron . --enable-logging",
    "build": "vite build",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "install-deps": "npm install"
  },
  "keywords": [
    "chat",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9"
  },
  "build": {
    "appId": "com.example.chat-app",
    "productName": "ロリスとのおしゃべりタイム",
    "output": "dist",
    "files": [
      "main.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
